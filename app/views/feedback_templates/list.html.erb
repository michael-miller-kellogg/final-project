<h1>
  Feedback list
</h1>

<a href="/new_feedback_form">
  Add a new feedback
</a>

<hr>

<table>
  <tr>
    <th>
      ID
    </th>

    <th>
      Feedback
    </th>

    <th>
      User
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @feedbacks.each do |feedback| %>
  <tr>
    <td>
      <%= feedback.id %>
    </td>

    <td>
      <%= feedback.feedback %>
    </td>

    <td>
      <%= feedback.user_id %>
    </td>

    <td>
      <%= time_ago_in_words(feedback.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(feedback.updated_at) %> ago
    </td>

    <td>
      <a href="/feedbacks/<%= feedback.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
