<h1>
  Restaurant list
</h1>

<a href="/new_restaurant_form">
  Add a new restaurant
</a>

<hr>

<table>
  <tr>
    <th>
      ID
    </th>

    <th>
      Place
    </th>

    <th>
      Website
    </th>

    <th>
      Cuisine
    </th>

    <th>
      Average review
    </th>

    <th>
      Number of reviews
    </th>

    <th>
    </th>
  </tr>

  <% @restaurants.each do |restaurant| %>
  <tr>
    <td>
      <%= restaurant.id %>
    </td>

    <td>
      <%= restaurant.place %>
    </td>

    <td>
      <%= restaurant.website %>
    </td>

    <td>
      <%= restaurant.cuisine %>
    </td>

    <td>
      <%= restaurant.average_review %> 
    </td>

    <td>
      <%= restaurant.num_reviews %> 
    </td>

    <td>
      <a href="/restaurants/<%= restaurant.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
