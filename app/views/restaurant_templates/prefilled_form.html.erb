<h1>
  Edit restaurant #<%= @restaurant.id %>
</h1>

<hr>

<%= render("restaurant_templates/validation_failures.html.erb") %>

<form action="/update_restaurant_record/<%= @restaurant.id %>" method="post">
  <div>
    <label for="place">
      Place
    </label>

    <input type="text" id="place" name="place" value="<%= @restaurant.place %>">
  </div>

  <div>
    <label for="website">
      Website
    </label>

    <input type="text" id="website" name="website" value="<%= @restaurant.website %>">
  </div>

  <div>
    <label for="cuisine">
      Cuisine
    </label>

    <input type="text" id="cuisine" name="cuisine" value="<%= @restaurant.cuisine %>">
  </div>

  <button>
    Update restaurant
  </button>
</form>

<hr>

<a href="/restaurants">
  Go back
</a>
